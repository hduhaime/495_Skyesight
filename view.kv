#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<WindowWrapper>:
    orientation: "vertical"
    manager: screen_manager

    primary_full: screen_manager.fs.primary
    primary_split:  screen_manager.ss.primary
    secondary_split:    screen_manager.ss.secondary


    Toolbar:
        manager: screen_manager

    ScreenManagement:
        id: screen_manager

<ScreenManagement>:

    fs: full
    ss: split
    transition: SlideTransition()


    FullScreenWindow:
        id: full
    SplitScreenWindow:
        id: split

<Toolbar>:
    orientation: "horizontal"
    size_hint_y: None
    height: 100

    Label:
        text: "Dual View: "
    Switch:
        id: switch_id
        on_active: root.click_switch_screen(self, self.active)

    Label:
        text: "Sensor range: "
    Label:
        text: '%.1f' % distance_slider.value + "m"

    Slider:
        id: distance_slider
        min: 0.1
        max: 3
        value: 1.5
        step: 0.1

<CamView>:
    orientation: "vertical"
    padding: 10
    spacing: 10
    video: video_obj


    Label:
        text: "Label"

    VideoFeed:
        id: video_obj

    BoxLayout:
        orientation: "horizontal"
        padding: 10
        spacing: 10
        Button:
            text: "<"
        Button:
            text: ">"

<FullScreenWindow>:
    name: "FULLSCREEN"
    primary: primary_feed
    BoxLayout:
        orientation: "horizontal"

        CamView:
            id: primary_feed


<SplitScreenWindow>:
    name: "SPLITSCREEN"
    primary: primary_feed
    secondary: secondary_feed
    BoxLayout:
        orientation: "horizontal"

        CamView:
            id: primary_feed
        CamView:
            id: secondary_feed